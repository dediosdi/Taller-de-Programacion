programa ejemplo
procesos
  proceso EnviarIDs
  comenzar
    EnviarMensaje(1, R1)
    EnviarMensaje(2, R2)
    EnviarMensaje(3 ,R3)
  fin
  
  proceso limpiarCalle(ES cantP: numero)
  comenzar
    mover
    mientras (HayPapelEnLaEsquina)  
      tomarPapel
  fin
areas
  areaR1: AreaP (1,1,100,1)
  areaR2: AreaP (1,2,100,2)
  areaR3: AreaP (1,3,100,3)
  areaRF: AreaP(1,4,1,4)
  
robots
  robot RobotRecolector
  variables
    id: numero
    cantP: numero
    listo: boolean
    miAv,miCa: numero
  comenzar
    miCa:=PosCa
    RecibirMensaje(id,RF)
    derecha
    
    repetir 100
      repetir 10
        limpiarCalle(cantP) 
      si (id = 1)    
        EnviarMensaje(V, R2)
        EnviarMensaje(V, R3)
        RecibirMensaje(listo, R2)
        RecibirMensaje(listo, R3)
      sino
        si (id = 2)
          EnviarMensaje(V, R1)
          EnviarMensaje(V, R3)
          RecibirMensaje(listo, R1)
          RecibirMensaje(listo, R3)
        sino
          si (id = 3)
            EnviarMensaje(V, R2)
            EnviarMensaje(V, R1) 
            RecibirMensaje(listo, R2)
            RecibirMensaje(listo, R1) 
   
  fin
  
  robot RobotFiscalizador
  comenzar
    EnviarIDs
  fin
variables
  R1: RobotRecolector
  R2: RobotRecolector
  R3: RobotRecolector
  RF: RobotFiscalizador
comenzar
  AsignarArea(RF, areaRF)
  AsignarArea(R1, areaR1)
  AsignarArea(R2, areaR2)
  AsignarArea(R3, areaR3)
  Iniciar(RF, 1,4)
  Iniciar(R1, 1,1)
  Iniciar(R2, 1,2)
  Iniciar(R3, 1,3)
fin