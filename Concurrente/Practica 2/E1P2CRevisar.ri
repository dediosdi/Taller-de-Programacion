programa ejemplo
procesos
  proceso actualizarMax(E flores: numero; ES floresMax: numero)
  comenzar
    si flores > floresMax
      floresMax:= flores
  fin

  proceso juntarFlor (ES cantF: numero)
  comenzar
    si (HayFlorEnLaEsquina)
      tomarFlor
      cantF:=cantF+1  
  fin
       
  proceso juntarFlores (ES totalF: numero)
  comenzar
    repetir 9
      mover
      juntarFlor (totalF)
  fin
  
