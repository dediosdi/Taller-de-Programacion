robots
  robot robotFlorero
  variables
    quienSoy: numero
    totalF: numero
  comenzar
    RecibirMensaje(quienSoy, RF)
    juntarFlores (totalF)
    EnviarMensaje(quienSoy, RF)
    EnviarMensaje(totalF, RF)
  fin
  
  robot robotFiscalizador
  variables
    juntadas: numero
