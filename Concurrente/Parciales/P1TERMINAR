programa ejemplo
procesos
  proceso actualizarMaximo(E cant: numero ; E nroRobot: numero ; ES rGanador: numero)
  variables
    max: numero
  comenzar
    max:=-1
    si (cant>max)
      max:=cant
      rGanador:=nroRobot
  fin
  
  proceso izquierda
  comenzar
    repetir 3
      derecha
  fin

  proceso juntarPapeles(ES cantP: numero)
  comenzar
    mientras (HayPapelEnLaEsquina)
      tomarPapel
      cantP:=CantP+1
  fin

  proceso enviarIDs
  comenzar
    EnviarMensaje(1,R1)
    EnviarMensaje(2,R2)
    EnviarMensaje(3,R3)
  fin
  
  proceso InformarAltoyAncho 
  variables
    alto, ancho: numero
  comenzar
    Random(alto, 1,4)
    Random(ancho,1,3)
    EnviarMensaje(alto, R1)
    EnviarMensaje(ancho,R1)
    Random(alto, 1,4)
    Random(ancho,1,3)
    EnviarMensaje(alto, R2)
    EnviarMensaje(ancho,R2)
    Random(alto, 1,4)
    Random(ancho,1,3)
    EnviarMensaje(alto, R3)
    EnviarMensaje(ancho,R3)
  fin
  
  proceso escalon (E alto: numero ; E ancho: numero ; ES cantP: numero)
  comenzar
    repetir alto
      juntarPapeles (cantP)
      mover
    derecha
    repetir ancho
      juntarPapeles(cantP)
      mover
      
  fin
  
  proceso hacerEscalones (ES alto: numero ; ES ancho: numero ; ES cantP: numero)
  comenzar
    repetir 3 {Son 3 escalones}
      escalon(alto,ancho,cantP)
      izquierda
  fin
areas
  areaF: AreaP (1,1,1,1)
  ciudad: AreaP (2,1,100,100)
  
robots
  robot robotPapelero
  variables
    alto, ancho: numero
    quienSoy: numero
    cantP: numero
    miAv,miCa: numero
  comenzar
    cantP:=0
    miAv:=PosAv
    miCa:=PosCa
    RecibirMensaje(quienSoy, RF)
    RecibirMensaje(alto, RF)
    RecibirMensaje(ancho,RF)
    hacerEscalones(alto,ancho, cantP)
    EnviarMensaje(quienSoy, RF)
    EnviarMensaje(cantP, RF)
    BloquearEsquina(100,100)
    Pos(100,100)
    mientras (HayPapelEnLaBolsa)
      depositarPapel
    Pos(miAv,miCa)
    LiberarEsquina(100,100)
    
  fin
  
  robot robotFiscalizador
  variables
    id: numero
    cant: numero
    ganador: numero
  comenzar
    enviarIDs
    InformarAltoyAncho {informa alto y ancho aleatorio a los robots)}
    
    repetir 3
      RecibirMensaje(id, *)
    si (id = 1)
      RecibirMensaje(cant, R1)
      actualizarMaximo(cant, id, ganador)
    sino
      si (id = 2)
        RecibirMensaje(cant, R2)
        actualizarMaximo(cant, id, ganador)
      sino
        RecibirMensaje(cant, R3)
        actualizarMaximo(cant, id, ganador)
        
    Informar (ganador)
  fin
variables
  R1: robotPapelero
  R2: robotPapelero
  R3: robotPapelero
  RF: robotFiscalizador
comenzar
  AsignarArea(RF, areaF)
  AsignarArea(R1, ciudad)
  AsignarArea(R2, ciudad)
  AsignarArea(R3, ciudad)
  Iniciar(RF, 1,1)
  Iniciar(R1, 2,1)
  Iniciar(R2, 32,1)
  Iniciar(R3, 62,1)


   
fin